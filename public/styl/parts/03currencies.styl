	background-size cover
	padding-top 82px
	&:before
		content ''
		display block
		width 51%
		height 311px
		position absolute
		bottom 1%
		right 8%
		background url(../img/coin_dash.png) no-repeat
		background-size contain
	@media screen and (max-width: 1680px)
		padding-top 65px
	@media screen and (max-width: 1366px)
		padding-top 40px
	@media screen and (max-width: 1280px)
		padding-top 70px
	@media screen and (max-width: 992px)
		padding-top 40px
		width 50%
		height 475px
		&:before
			background-position-y 100%
	@media screen and (max-width: 810px)
		padding-top 27px
	@media screen and (max-width: 600px)
		padding-top 23px
	@media screen and (max-width: 576px)
		width 100%
		padding-top 70px
		&:before
			width 166px
