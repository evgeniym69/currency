.fx-curr__inner
	padding 30px 30px 0
	justify-content space-between
	@media screen and (max-width: 1560px)
		padding 25px 25px 0
	@media screen and (max-width: 1280px)
		padding 15px 15px 0
	@media screen and (max-width: 576px)
		padding 20px 5px 0

.fx-curr__item
	border 5px solid #000
	@media screen and (max-width: 1560px)
		margin-bottom 20px
	@media screen and (max-width: 1280px)
		margin-bottom 20px
	@media screen and (max-width: 992px)
		border 3px solid #000

.fx-curr__bitcoin
	order 1
	width 31%
	height 870px
	background  #3d97ff url(../img/bitcoin_bg.jpg) 50% 50% no-repeat
	background-size cover
	padding-bottom 90px
	&:before
		content ''
		display block
		width 55%
		height 316px
		position absolute
		top 3%
		right 3%
		background url(../img/coin_bitcoin.png) no-repeat
		background-size contain
	@media screen and (max-width: 1800px)
		padding-bottom 65px
	@media screen and (max-width: 1680px)
		padding-bottom 50px
	@media screen and (max-width: 1560px)
		padding-bottom 80px
	@media screen and (max-width: 1400px)
		padding-bottom 55px
	@media screen and (max-width: 1300px)
		padding-right 5px
	@media screen and (max-width: 1280px)
		padding-bottom 65px
	@media screen and (max-width: 992px)
		width 47%
		height 475px
		padding-bottom 55px
		padding-right 0
	@media screen and (max-width: 785px)
		padding-bottom 45px
	@media screen and (max-width: 700px)
		padding-bottom 35px
	@media screen and (max-width: 625px)
		padding-bottom 20px
	@media screen and (max-width: 576px)
		width 100%
		padding-bottom 80px
		&:before
			width 167px
	@media screen and (max-width: 480px)
		padding-bottom 65px
	@media screen and (max-width: 420px)
		padding-bottom 55px
	@media screen and (max-width: 340px)
		padding-bottom 35px

.fx-curr__bitcoin-text
	width 88%
	margin 0 auto
	transform rotate(-8deg) translateX(10px)
	@media screen and (max-width: 768px)
		width 92%
		transform rotate(-8deg) translateX(5px)
	@media screen and (max-width: 625px)
		transform rotate(-8deg) translateX(3px)

.fx-curr__dash
