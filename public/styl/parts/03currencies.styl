.fx-curr__dash-text
	width 82%
	margin 0 auto
	@media screen and (max-width: 698px)
		width 90%
	@media screen and (max-width: 576px)
		width 85%
		transform translateX(-15px)
	@media screen and (max-width: 390px)
		width 76%
		transform translateX(-20px)

.fx-curr__ripple
	order 4
	width 46.5%
	height 540px
	background  url(../img/ripple_white.png) 262% 62% no-repeat, #ffcc00 url(../img/ripple_bg_lines.png) 50% 50% no-repeat
	background-size 97%, cover
	&:before
		content ''
		display block
		position absolute
		width 35%
		height 293px
		bottom 1%
		left 1%
		background url(../img/coin_ripple.png) no-repeat
		background-size contain
	@media screen and (max-width: 1930px)
		background-size 895px, cover
		background-position 24px -42px, 50% 50%
	@media screen and (max-width: 1680px)
		padding-right 6px
		background-size 980px, cover
		background-position 24px -84px, 50% 50%
	@media screen and (max-width: 1366px)
		&:before
			background-position-y 100%
	@media screen and (max-width: 992px)
		width 100%
		order 3
		height 290px
		background-size 645px, cover
		background-position 80% -84px, 50% 50%
		&:before
			width 24%
			left 3%
			background-position-y 89%
	@media screen and (max-width: 768px)
		background-size 520px, cover
		background-position 83% -44px, 50% 50%
	@media screen and (max-width: 576px)
		width 100%
		height 475px
		background-size 600px, cover
		background-position 48% 60px, 50% 50%
		&:before
			width 159px
			left 6%
			background-position-y 0
			top 1%
			bottom auto
	@media screen and (max-width: 440px)
		background-position 75% 84px, 50% 50%

