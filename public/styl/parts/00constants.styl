@font-face
	font-family LatoReg
	font-style normal
	src url(../fonts/Lato2OFL/Lato-Regular.ttf)

@font-face
	font-family LatoLight
	font-style normal
	src url(../fonts/Lato2OFL/Lato-Light.ttf)

@font-face
	font-family CCS
	font-style normal
	src url(../fonts/CCSMASH/V_CCSMASH_V2.2.ttf)

/*styles for scroll start*/
::-webkit-scrollbar
	width 8px
	@media screen and (max-width: 992px)
		width 2px

::-webkit-scrollbar-thumb:vertical
	background-color #898989
	border-radius 2px

::-webkit-scrollbar-track-piece
	background-color #f1f1f1
	border-radius 0px

.leadia_develop_text
	display none !important

body
	font-family LatoLight

/*styles for scroll finish*/

.clearfix
	&:after
		content ''
		display block
		height 0px
		clear both

.fx-nowrap
	white-space nowrap
	color inherit
	letter-spacing inherit

.text__lato-reg
	font-family LatoReg
	font-size 26px
	line-height 36px
	letter-spacing 1.3px
	color #000
	@media screen and (max-width: 1560px)
		font-size 24px
		line-height 32px
		letter-spacing 1px
	@media screen and (max-width: 1280px)
		font-size 22px
		line-height 28px
	@media screen and (max-width: 1100px)
		font-size 20px
		line-height 27px
	@media screen and (max-width: 992px)
		font-size 16px
		line-height 22px
		letter-spacing .45px
	@media screen and (max-width: 640px)
		line-height 21px
		letter-spacing .25px
	@media screen and (max-width: 576px)
		line-height 22px
		letter-spacing .45px
	@media screen and (max-width: 390px)
		line-height 21px

.text__lato-light
	font-family LatoLight
	font-size 18px
	line-height 24px
	letter-spacing .9px
	color #707070
	@media screen and (max-width: 1400px)
		font-size 16px
		line-height 22px
	@media screen and (max-width: 1300px)
		font-size 15px
		line-height 20px
	@media screen and (max-width: 1200px)
		font-size 14px
		line-height 18px
	@media screen and (max-width: 992px)
		line-height 16px
		letter-spacing .7px
		color #000

.text__comic
	font-family CCS
	letter-spacing 4px

//button animation
@keyframes shake {
	from {
    	transform rotate(5deg)
}
	to {
		transform rotate(-5deg)
    }
}
