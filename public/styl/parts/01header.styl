.fx-header
	height 100vh
	min-height 972px
	border-bottom 7px solid #000
	background #ff8502 url(../img/header.png) no-repeat
	background-size cover
	overflow hidden
	@media screen and (max-width: 1200px)
		height auto
	@media screen and (max-width: 992px)
		min-height 660px
		border-bottom 4px solid #000
	@media screen and (max-width: 768px)
		min-height 560px
	@media screen and (max-width: 576px)
		min-height auto
		height 1000px
		flex-direction column
		justify-content flex-end

.fx-header__thought-section
	width 48%
	@media screen and (max-width: 1615px) and (max-height: 905px)
		width 45%
	@media screen and (max-width: 1300px)
		width 52%
	@media screen and (max-width: 1300px) and (max-height: 800px)
		width 48%
	@media screen and (max-width: 1270px) and (max-height: 720px)
		width 48%
	@media screen and (max-width: 1200px)
		width 50%
	@media screen and (max-width: 576px)
		width 100%
		border-bottom 4px solid #000

.fx-header__img-man
	width 88%
	@media screen and (max-width: 1930px)
		width initial
		max-width 100%
		transform translateY(14px)
	@media screen and (max-width: 1500px)
		transform translateY(5px)
	@media screen and (max-width: 1200px)
		max-width none
		width 570px
	@media screen and (max-width: 992px)
		width 500px
	@media screen and (max-width: 910px)
		width 470px
	@media screen and (max-width: 768px)
		width 360px
	@media screen and (max-width: 640px)
		width 345px
	@media screen and (max-width: 576px)
		width 400px
		transform translateY(3px)
	@media screen and (max-width: 520px)
		width 380px
	@media screen and (max-width: 440px)
		width 320px

