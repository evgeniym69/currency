.dv-header
	height 130px
	background-color #fff
	@media screen and (max-width: 768px)
		height 100px
	@media screen and (max-width: 480px)
		height 80px

.dv-header__logo
	width 220px
	@media screen and (max-width: 768px)
		width 180px
	@media screen and (max-width: 480px)
		width 130px

.dv-main__container
	background  url(../img/video_blot_white.svg) 44% 93% no-repeat, url(../img/video_bg.jpg) 50% 50% no-repeat
	background-size 1525px 417px, cover
	overflow hidden
	@media screen and (max-width: 1600px)
		background-size 96% 400px, cover
	@media screen and (max-width: 1400px)
		background-size 96% 53%, cover
	@media screen and (max-width: 1200px)
		background-size 96% 58%, cover
	@media screen and (max-width: 991px)
		background  url(../img/video_blot_white.svg) 44% 86% no-repeat, url(../img/video_bg.jpg) 50% 50% no-repeat
		background-size 96% 58%, cover
	@media screen and (max-width: 767px)
		background  url(../img/video_blot_white.svg) 44% 90% no-repeat, url(../img/video_bg.jpg) 50% 50% no-repeat
		background-size 96% 64%, cover
	@media screen and (max-width: 669px)
		background  url(../img/video_bg.jpg) 50% 50% no-repeat
		background-size cover
		
.dv-main__container
	border-top 7px solid #000
	border-bottom 7px solid #000
	@media screen and (max-width: 992px)
		border-top 4px solid #000
		border-bottom 4px solid #000
		
.dv-main__wrap
	padding 80px 0 72px
	@media screen and (max-width: 669px)
		padding-bottom  40px
	@media screen and (max-width: 500px)
		padding 50px 0 40px
	
.dv-main__video-wrap
	margin-bottom 30px
	z-index: 2
	//border 5px solid #000

.dv-main__video
	overflow hidden
	border 5px solid #000
	width 100%
	height 604px
	z-index 1
	background #000
	@media screen and (max-width: 1200px)
		height 499px
	@media screen and (max-width: 991px)
		height 382px
		border 4px solid #000
	@media screen and (max-width: 768px)
		border none
		background none
	@media screen and (max-width: 680px)
		height 337px	
	@media screen and (max-width: 600px)
		height 295px	
	@media screen and (max-width: 500px)
		height 247px
	@media screen and (max-width: 420px)
		margin: 0 -10px
		width calc(100% + 20px)
		height 215px
	@media screen and (max-width: 320px)
		height 164px
		
.dv-main__video-iframe
	width: 100%
	height: 100%

.dv-main__video-bg-img
	max-width 100%
	
.dv-main__video-bg-top-left-wrap
	width 25%
	right 86%
	bottom 55%
	@media screen and (max-width: 768px)
		right 84%
		bottom 65%
		
.dv-main__video-bg-bottom-left-wrap
	width 6%
	right 98%
	top 77%
	@media screen and (max-width: 680px)
		right 97%
		top 67%
	@media screen and (max-width: 460px)
		right 96%
	@media screen and (max-width: 360px)
		right 95%
		top 62%

.dv-main__video-bg-top-right-wrap
	width 15%
	left 94%
	bottom 62%

.dv-main__video-bg-bottom-right-wrap
	width 20%
	left 87%
	top 50%
	display none

	
.dv-main__description
	font-family LatoReg
	font-size 26px
	line-height 36px
	color #000
	z-index 1
	@media screen and (max-width: 1600px)
		margin 0 auto
		max-width 91%
		font-size 24px
		line-height 31px
	@media screen and (max-width: 1400px)
		margin 70px auto 0
		max-width 71%
	@media screen and (max-width: 1200px)
		font-size 22px
		line-height 31px
	@media screen and (max-width: 991px)
		margin-top 20px
		font-size 18px
		line-height 23px
	@media screen and (max-width: 669px)
		max-width: 91%
		&:after
			content: ''
			position: absolute
			top: -60px
			left: 50%
			transform translateX(-50%) rotate(-5deg)
			background-color: #fff
			width: 200%
			height: 180%
			border-top: 3px solid #000
			z-index: -1
	@media screen and (max-width: 420px)
		line-height 22px

.dv-main__video-white-bg-img
	max-width 100%
	@media screen and (max-width: 1200px)
		height 100%
	@media screen and (max-width: 992px)
		height 315px
	@media screen and (max-width: 768px)
		max-width 91%
		height 325px