.fx-footer__contacts-item
	font-family LatoReg
	font-size 20px
	line-height 48px
	letter-spacing 2px
	color #000
	padding-left 50px
	transition .2s
	&:before
		content ''
		width 30px
		height 30px
		position absolute
		left 0
		top 50%
		transform translateY(-50%)
		transition .2s
	&:hover
		color #f8a127
	@media screen and (max-width: 992px)
		font-size 18px
		letter-spacing 1.8px
		margin-bottom 6px

.fx-footer__phone
	&:before
		background url(../img/05_phone.svg) no-repeat
		background-size contain
	&:hover:before
		background url(../img/05_phone_hover.svg) no-repeat
		background-size contain
	@media screen and (max-width: 1366px)
		margin-right 0

.fx-footer__mail
	&:before
		background url(../img/07_mail.svg) no-repeat 50% 60%
		background-size contain
	&:hover:before
		background url(../img/07_mail_hover.svg) no-repeat 50% 60%
		background-size contain
	@media screen and (max-width: 1366px)
